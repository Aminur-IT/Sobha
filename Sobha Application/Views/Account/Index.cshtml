                <!-- Row 1 inside col-4 -->
                <div class="row mb-3"style="height: 33.33%">
                    <div class="col">
            <div class="rinnerDiv1">
                <img id="logo" src="~/Images/Login/my-sobha-logo-black.svg" />
            </div>
                       
                    </div>
                </div>
                <!-- Row 2 inside col-4 -->
